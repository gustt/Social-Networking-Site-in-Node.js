    script(src='/javascripts/scrollview.js')
  body
    #jqm-home.type-interior(data-role='page', data-theme='b')
      div(data-role='header', data-position='fixed')
        h1 Pragma-Portal
        //
           <a href="menu.html" data-transition="pop" data-theme="a" data-rel="dialog" data-icon="grid" data-iconpos="notext" class="ui-btn-left"></a> 
        div(data-role='navbar')
          ul
            li
              a.ui-btn-active.ui-state-persist(href='home.html') Profile
            li
              a(href='/wallpost') Wall
            li
              a(href='/show/friends') Friends
      div(data-role='content')
        ul(data-role='listview', data-inset='true', style='padding: 0px;')
          li
            img(src='/uploads/photos/'+user.photo, width=40)
            h3(style='margin: 0px; padding: 0px;')=user.username
            h6=user.sex
            p=user.location
        ul(data-role='listview', data-theme='c', data-inset='true')
          li(data-role='list-divider') Age
          li
            h5=user.age
          li(data-role='list-divider') Email Id
            li
              h5=user.email
        ul(data-role='listview', data-theme='c', data-inset='true')
          li(data-role='list-divider') More
          li
            a(href='/userinfo') Home
          li
            a(href ='/user/videos/'+user._id.toHexString()) Videos Posted
          li
            a(href='/friends/wallposts/'+user._id.toHexString()) Wall
          li
            a(href='/sessions') Log Out
      div(data-role='footer', data-position='fixed')
        h4 Powered By:Pragmatic Techsoft
