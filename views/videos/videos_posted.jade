  body
    #jqm-home.type-interior(data-role='page', data-theme='a')
      div(data-role='header', data-position='fixed')
        h1="Video Posted"
        a(href='/userinfo') Home
      div(data-role='content')
        ul(data-role='listview', data-inset='true', data-position='fixed')
          -each post in posts
            if(post.user_id == currentUser.id)
              li
                h3=post.created_at
                h3=post.filename
                embed(src='/uploads/photos/'+post.filename, width=420, height=320, autoplay=0)
              br
            else
              li
                h3=post.filename
                h3=post.created_at
                embed(src='/uploads/photos/'+post.filename, width=420, height=320, autoplay=0)
      div(data-role='footer', data-position='fixed')
